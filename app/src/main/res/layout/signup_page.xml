<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_light"
        android:padding="0dp"
        android:id="@+id/signUpToolbar"/>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:hint="First Name"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:id="@+id/firstNameSignUp"
                />
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_shape"
                android:hint="Last Name"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:id="@+id/lastNameSignUp"/>
        </LinearLayout>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Phone Number"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:id="@+id/phoneSignUp"
                />
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Email Id"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:id="@+id/emailSignUp"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Create your password"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:id="@+id/passwordSignUp"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"
                android:id="@+id/registerSignUp"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Creating account you agree to the Terms and Conditions of TradeBooks and its Privacy Policy."
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="start"
                android:layout_margin="10dp"/>
            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/progressSignUp"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>