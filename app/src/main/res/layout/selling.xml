<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/sellingToolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Book Name"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:id="@+id/nameSelling"
                />
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Author Name"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:id="@+id/authorNameSelling"
                />
            <Spinner
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:layout_margin="10dp"
                android:id="@+id/genreSelling"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_shape"
                    android:hint="Published Year"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:id="@+id/yearSelling"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_shape"
                    android:hint="Price in Rupees"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:id="@+id/priceSelling"/>
            </LinearLayout>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Description of Book"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textMultiLine"
                android:id="@+id/descriptionSelling"
                />
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape"
                android:hint="Publication House"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:id="@+id/publicationSelling"
                />
            <ImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                android:id="@+id/bookPicSelling"
                />
            <Button
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:text="Sell"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"
                android:id="@+id/sellSelling"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Selling on TradeBooks you agree to the Terms and Conditions of TradeBooks and its Selling Policy."
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="start"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>